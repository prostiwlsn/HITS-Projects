@using Common.Models
@model CredentialChangeTokenModel
@{
}
@using (Html.BeginForm("ChangePassword", "Home", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.ChangeToken)
        @Html.TextBoxFor(m => m.ChangeToken, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ChangeToken, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NewValue)
        @Html.PasswordFor(m => m.NewValue, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NewValue, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}