@using Microsoft.AspNetCore.Http
@using MVCAdmin.Services
@using MVCAdmin.Interfaces
@using System.Security.Claims
@inject IHttpContextAccessor HttpContextAccessor
@inject IPersonellRequestService PersonellRequestService
@{
    //HttpContextAccessor.HttpContext.Request.Cookies.TryGetValue("accessToken", out string accessToken)
    string role = "undefined";
    if (User.Identity.IsAuthenticated)
    {
        var accessToken = User.Claims.FirstOrDefault(claim => claim.Type == "accessToken").Value;
        if (accessToken != null)
        {
            role = await PersonellRequestService.GetMyRole(accessToken);
        }
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVCAdmin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVCAdmin.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MVCAdmin</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Profile" asp-action="Index">Profile</a>
                            </li>
                            @if (User.Claims.First(claim => claim.Type == ClaimTypes.Role).Value == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Dictionary" asp-action="Index">Dictionary</a>
                                </li>
                            }
                            @if (User.Claims.First(claim => claim.Type == ClaimTypes.Role).Value != "Manager")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Personell" asp-action="Index">Personell</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Application" asp-action="Index">Applications</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 d-flex justify-content-center">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MVCAdmin - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
