@using Common.Messages
@using Common.Models
@using System.Security.Claims
@{
}

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<div class="d-flex flex-column">
    <div>
        @if (User.Claims.First(claim => claim.Type == ClaimTypes.Role).Value == "Admin")
        {
            <a asp-controller="Personell" asp-action="AddNew">Добавить нового</a>
        }
    </div>
    <div class="d-flex flex-column">
        @foreach (var item in Model)
        {
            <div class="d-flex flex-row mt-2">
                <div class="ms-1">@item.Name </div>
                <div class="ms-1">@item.Surname  </div>
                <div class="ms-1">@item.SecondName  </div>
                <div class="ms-1">@item.Email </div>
                <div class="ms-1">@item.Role </div>
                @if (item.Role == Roles.Manager)
                {
                    @if (item.FacultyId == null)
                    {
                        <div class="ms-1">No faculty</div>
                    }
                    else
                    {
                        <div class="ms-1">@item.FacultyName </div>
                    }
                }
                @if (User.Claims.First(claim => claim.Type == ClaimTypes.Role).Value == "Admin" || User.Claims.First(claim => claim.Type == "id").Value != item.Id.ToString())
                {
                    <a asp-controller="Personell" asp-action="Edit" asp-route-userId="@item.Id">Edit profile</a>
                }
            </div>
        }
    </div>
</div>